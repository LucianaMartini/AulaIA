# Anotações e testes da aula 6
# Psicóloga online
nome = input("Qual seu nome? ")
print (f"Olá {nome}, como você está linda hoje!")

# Soma de números
print("Informe 2 números inteiros")
num1 = int(input("digite o primeiro número: "))
num2 = int(input("digite o primeiro número: "))

soma = num1 + num2
print(f"a soma de {num1} e {num2} é {soma}")
print(f"Parabens {nome}, você é um gênio!")

# Média de números
media = soma / 2
print(f"A média dos números que você digitou é: {media:.2f}")
print(f"Minha nossa {nome}, hoje você está arrasando!")